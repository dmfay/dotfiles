! urxvt

!URxvt*font:xft:Cousine:style=Regular:pixelsize=12:antialias=true:hinting=slight
!URxvt*boldFont:xft:Cousine:style=Regular:pixelsize=12:antialias=true:hinting=slight
URxvt*font:xft:Inconsolata:style=Medium:pixelsize=14:antialias=true:hinting=slight
URxvt*boldFont:xft:Inconsolata:style=Medium:pixelsize=14j:antialias=true:hinting=slight
URxvt*borderless: 1
URxvt*scrollBar:            false
URxvt*saveLines:  2000

!! perl extensions
URxvt.perl-ext:             default,url-select,clipboard

!! url-select (part of urxvt-perls package)
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.autocopy:  true
URxvt.url-select.button:    2
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true

!! Nastavuje kopirovani
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy

!! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

!! urxvt color scheme:
URxvt*background: #1a1b25
URxvt*foreground: #e0e0e0

