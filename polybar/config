[colors]
background = #794d68
foreground = #f1e9ef
highlight = #15151e
alert = #b8929c

secondary = #7989b4

[bar/lamia]
width = 100%
height = 22
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 0

font-0 = Inconsolata-dz:pixelsize=12
font-1 = FontAwesome:size=12:weight=Regular

modules-left = i3 xwindow xkeyboard
modules-center = filesystem memory cpu temperature wlan
modules-right = pkg volume date

tray-position = right
tray-transparent = false
; tray-padding = 2
; tray-maxsize = 16

wm-restack = i3

; override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/pkg]
type = custom/script
interval = 1200
format = <label>
label = "%output:0:30%"
exec = .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard

label-layout = %layout%
label-layout-foreground = ${colors.highlight}

label-indicator-padding = 1

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /data

label-mounted = %{F#15151e}%mountpoint%%{F-}: %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.highlight}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.highlight}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.highlight}
label-focused-underline= ${colors.highlight}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ï‹› "
format-prefix-foreground = ${colors.highlight}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ïˆ³ "
format-prefix-foreground = ${colors.highlight}
label = %gb_free%

[module/wlan]
type = internal/network
interface = wlp8s0
interval = 1.0

format-connected = <ramp-signal> <label-connected>
label-connected = %{F#15151e}%local_ip% %{F#f1e9ef}%downspeed:9% %upspeed:9%

format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.highlight}

ramp-signal-0 = ðŸ˜±
ramp-signal-1 = ðŸ˜ 
ramp-signal-2 = ðŸ˜’
ramp-signal-3 = ðŸ˜Š
ramp-signal-4 = ðŸ˜ƒ
ramp-signal-5 = ðŸ˜ˆ
ramp-signal-foreground = ${colors.highlight}

[module/date]
type = internal/date
interval = 5

date = "%a %Y-%m-%d"
time = %I:%M:%S %P

format-prefix = î€–
format-prefix-foreground = ${colors.highlight}

label = %date% %time%

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <bar-volume> <label-volume>
label-volume = %percentage%
label-muted = ï€¦ muted
label-volume-foreground = ${colors.highlight}
label-muted-foreground = ${colors.highlight}
ramp-volume-0 = ï€¨
ramp-volume-1 = ï€¨
ramp-volume-2 = ï€¨
ramp-volume-foreground = ${colors.highlight}
bar-volume-width = 10
bar-volume-indicator = Â·
bar-volume-fill = Â·
bar-volume-empty = Â·
bar-volume-foreground-0 = ${colors.highlight}
bar-volume-indicator-foreground = ${colors.highlight}
bar-volume-empty-foreground = ${colors.foreground}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-warn = <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}
label-warn-background = ${colors.highlight}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

[module/title]
type = internal/xwindow

